{
  "compilerOptions": {
    "incremental": true,

    "outDir": "build",
    "baseUrl": ".",
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,

    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["**/node_modules", "**/dist"]
}